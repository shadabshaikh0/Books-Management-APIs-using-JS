{
  "name": "book management",
  "version": "0.0.0-development",
  "description": "RESTful api for books management",
  "main": "start.js",
  "engines": {
    "node": ">=9",
    "npm": ">=5"
  },
  "scripts": {
    "start": "NODE_PATH=. node start.js",
    "start_prod": "NODE_PATH=. NODE_ENV=production node start.js",
    "start_dev": "NODE_PATH=. NODE_ENV=development nodemon start.js",
    "deploy": "NODE_PATH=. NODE_ENV=development node cluster.js",
    "lint": "standard --verbose --parser babel-eslint | snazzy",
    "lint:staged": "lint-staged",
    "fresh-install": "rm -rf node_modules && yarn cache clean --force && yarn install",
    "lint:fix": "standard --fix --parser babel-eslint"
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@babel/runtime": "^7.3.4",
    "@hapi/joi": "^17.1.1",
    "async": "^3.1.0",
    "awilix": "4.2.0",
    "awilix-express": "2.1.1",
    "babel-eslint": "^10.0.3",
    "body-parser": "1.18.3",
    "compression": "1.7.3",
    "cors": "2.8.5",
    "cron": "^1.8.2",
    "date-fns": "^1.30.1",
    "dd-trace": "^0.19.0",
    "decamelize": "^3.2.0",
    "dotenv": "6.2.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "express": "4.16.4",
    "express-cls-hooked": "^0.3.8",
    "express-status-monitor": "1.2.3",
    "expression-eval": "^2.0.0",
    "formidable": "^1.2.1",
    "global": "^4.4.0",
    "http-status": "1.3.1",
    "husky": "^1.3.1",
    "joi": "^14.3.1",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.23",
    "morgan": "1.9.1",
    "nodemon": "^1.18.10",
    "pm2": "3.3.1",
    "prettier": "^1.19.1",
    "ramda": "0.26.1",
    "request": "^2.88.2",
    "standard": "^12.0.1",
    "string-template": "^1.0.0",
    "urlencode": "^1.1.0",
    "util": "^0.12.1",
    "uuid": "3.3.2",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@babel/core": "7.3.4",
    "@babel/plugin-proposal-optional-chaining": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "@babel/preset-env": "7.3.4",
    "@babel/register": "^7.5.5",
    "commitizen": "3.0.7",
    "cz-conventional-changelog": "2.1.0",
    "lint-staged": "8.1.4",
    "npm-check-updates": "2.15.0",
    "npx": "10.2.0",
    "pre-commit": "1.2.2"
  },
  "standard": {
    "ignore": [
      "/public/docs"
    ],
    "globals": [
      "request",
      "app",
      "expect",
      "describe",
      "it",
      "config",
      "beforeEach"
    ]
  },
  "repository": {
    "type": "git"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  }
}
